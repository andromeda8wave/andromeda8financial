<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.financialapp.controllers.EditPlanController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Category:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="categoryLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Current Plan:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="currentPlanLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="New Plan:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="newPlanField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button fx:id="saveButton" text="Save" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>